<div class="centered_page">
  <span></span><div class="login-center height_395">
    <div>
      <%= image_tag "https://secure.gravatar.com/avatar/HASH", width: 100, height: 100, class: "img-circle" %>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <p><strong>Fill out the form below to signup.</strong></p>
        <p><strong><%= @plan.titleize if @plan %> Plan</strong>
        <%= link_to "Change Plan", pricing_path, class: "btn-small btn-inverse v-align-top" %></p>
        <%= hidden_field_tag 'plan', @plan %>
        <div class="mb20"><%= f.email_field :email, placeholder: "Email address" %></div>

        <div class="mb20"><%= f.password_field :password, placeholder: "Secret phrase" %></div>

        <div><%= f.password_field :password_confirmation, placeholder: "Secret phrase confirmation" %></div>
        <div><%= f.submit "Create", class: "btn btn-primary", disable_with: "Creating..." %></div>
      <% end %>
    </div>
    <div><%= render "devise/shared/links" %></div>
  </div>
</div>
