<% content_for :title do %>
  Time Off Software Sign Up
<% end %>
<% content_for :meta_description do %>
Sign up for a free Zarlu subscription and try our employee time off request tracking and scheduling software. Our coach plan is free to try with no time limit.
<% end %>
<div class="blue_paper mt50 height_55">
  <div class="container">
    <header>
    <h1 class="center">Start Scheduling Time Off Requests In Seconds</h1>
    </header>
  </div>
</div>
<div class="devise_box">
  <div class="navigation_link">
    <ul class="nav nav-pills">
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Reset Secret Phrase", new_user_password_path %></li>
      <li class="active"><%= link_to "Sign Up", pricing_path %></li>
    </ul>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= hidden_field_tag 'plan', @plan %>
    <div><%= f.email_field :email, placeholder: "Email address", class: "input-xlarge" %></div>
    <div><%= f.password_field :password, placeholder: "Secret phrase", class: "input-xlarge" %></div>
    <div><%= f.password_field :password_confirmation, placeholder: "Secret phrase confirmation", class: "input-xlarge" %></div>
    <div><%= f.submit "Sign Up", class: "btn btn-success btn-large", disable_with: "Creating..." %></div>
  <% end %>
</div>
