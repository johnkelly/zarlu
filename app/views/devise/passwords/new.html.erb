<% content_for :title do %>
Reset the Pass Phrase for your Employee Business Software Subscription
<% end %>
<% content_for :meta_description do %>
Enter your email address to reset your pass phrase for your employee attendance and time off tracking business software.
<% end %>
<div class="blue_paper mt50 height_55 pb20">
  <div class="container">
    <header>
    <h1 class="center">Trouble Signing In? Reset Your Pass Phrase.</h1>
    </header>
  </div>
</div>
<div class="devise_box">
  <div class="navigation_link">
    <ul class="nav nav-pills">
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li class="active"><%= link_to "Reset Password", new_user_password_path %></li>
      <li><%= link_to "Sign Up", new_user_registration_path %></li>
    </ul>
  </div>
  <h4 class="center green">Provide your email to send reset instructions.</h4>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
    <%= hidden_field_tag 'plan', @plan %>
    <div>
      <%= f.label :email, class: "devise_label" %>
      <%= f.email_field :email, class: "input-xlarge" %>
    </div>
    <div><%= f.submit "Reset", class: "btn btn-primary btn-large", disable_with: "Resetting..." %></div>
  <% end %>
</div>
