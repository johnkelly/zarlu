        /*@editable*/font-family:Helvetica;
        /*@editable*/font-size:10px;
        /*@editable*/line-height:150%;
        padding-top:20px;
        padding-bottom:20px;
        /*@editable*/text-align:center;
      }
      /*
      @tab Footer
      @section footer link
      @tip Set the styling for your email's footer links. Choose a color that helps them stand out from your text.
      */
      .footerContent a:link,.footerContent a:visited,.footerContent a .yshortcuts,.footerContent a span {
        /*@editable*/color:#363636;
        /*@editable*/font-weight:normal;
        /*@editable*/text-decoration:underline;
      }
      .footerContent img{
        display:inline;
        height:auto;
        max-width:600 !important;
      }
      @media only screen and (max-width: 500px){
        body,table,td,p,a,li,blockquote{
          -webkit-text-size-adjust:none !important;
        }

        } @media only screen and (max-width: 500px){
        body{
          width:auto !important;
        }

        } @media only screen and (max-width: 500px){
        td[id=bodyCell]{
          padding:10px !important;
        }

        } @media only screen and (max-width: 500px){
        /*
        @tab Mobile Styles
        @section template width
        @tip Make the template fluid for portrait or landscape view adaptability. If a fluid layout doesn't work, set width to 300px instead.
        */
        table[id=templateContainer]{
          /*@tab Mobile Styles
          @section template width
          @tip Make the template fluid for portrait or landscape view adaptability. If a fluid layout doesn't work, set width to 300px instead.*/max-width:600px !important;
          /*@editable*/width:100% !important;
        }

        } @media only screen and (max-width: 500px){
        /*
        @tab Mobile Styles
        @section heading 1
        @tip Make the first-level headings larger in size for better readability on small screens.
        */
        h1{
          /*@editable*/font-size:40px !important;
          /*@editable*/line-height:100% !important;
        }

        } @media only screen and (max-width: 500px){
        /*
        @tab Mobile Styles
        @section heading 2
        @tip Make the second-level headings larger in size for better readability on small screens.
        */
        h2{
          /*@editable*/font-size:24px !important;
          /*@editable*/line-height:100% !important;
        }

        } @media only screen and (max-width: 500px){
