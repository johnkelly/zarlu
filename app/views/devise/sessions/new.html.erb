<% content_for :title do %>
  Time Off Software Sign In
<% end %>
<% content_for :meta_description do %>
Sign into your Zarlu time off tracking and scheduling software subscription. Easily manage employee time off requests and schedules with the best software.
<% end %>
<div class="blue_paper mt50 height_55">
  <div class="container">
    <header>
    <h1 class="center">Welcome Back! Your Subscription Is A Click Away.</h1>
    </header>
  </div>
</div>
<div class="devise_box">
  <div class="navigation_link">
    <ul class="nav nav-pills">
      <li class="active"><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Reset Secret Phrase", new_user_password_path %></li>
      <li><%= link_to "Sign Up", pricing_path %></li>
    </ul>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div><%= f.email_field :email, placeholder: "Email address", class: "input-xlarge" %></div>
    <div><%= f.password_field :password, placeholder: "Secret phrase", class: "input-xlarge" %></div>
    <div><%= f.submit "Sign In", class: "btn btn-primary btn-large", disable_with: "Signing in..." %></div>
  <% end %>
</div>
