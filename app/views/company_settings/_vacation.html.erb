<% cache vacation do %>
  <div class="company_setting">
    <div class="setting_header">
      <h3>Vacation Leave Settings</h3>
    </div>
    <div class="row">
      <div class="span4 setting_label">Enabled</div>
      <div class="offset1 span4">
        <%= best_in_place vacation, :enabled, path: company_setting_path(vacation), type: :checkbox, activator: "#icon-edit-subscriber-vacation-enabled" %>
        <i id="icon-edit-subscriber-vacation-enabled" class="icon-edit"></i>
      </div>
    </div>
    <div class="row">
      <div class="span4 setting_label">Default Accrual Rate</div>
      <div class="offset1 span4">
        <%= best_in_place vacation, :default_accrual_rate, path: company_setting_path(vacation), activator: "#icon-edit-subscriber-vacation-default-accrual" %>
        Hours&nbsp;<i id="icon-edit-subscriber-vacation-default-accrual" class="icon-edit"></i>
      </div>
    </div>
    <div class="row">
      <div class="span4 setting_label">Accrual Frequency</div>
      <div class="offset1 span4">
        Every&nbsp;<%= best_in_place vacation, :accrual_frequency, path: company_setting_path(vacation), type: :select, collection: CompanySetting.accrual_frequencies,
          activator: "#icon-edit-subscriber-vacation-accrual-frequency" %>
        <i id="icon-edit-subscriber-vacation-accrual-frequency" class="icon-edit"></i>
      </div>
    </div>
    <div class="row">
      <div class="span4 setting_label">Next Accrual Date</div>
      <div class="offset1 span4">
        <%= best_in_place vacation, :next_accrual, path: company_setting_path(vacation), type: :date, activator: "#icon-edit-subscriber-vacation-start-accrual", display_as: :display_next_accrual %>
        <i id="icon-edit-subscriber-vacation-start-accrual" class="icon-edit"></i>
      </div>
    </div>
  </div>
<% end %>
