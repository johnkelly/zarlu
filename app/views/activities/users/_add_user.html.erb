<% cache activity do %>
  <% user = activity.user %>
  <li>
  <span class="activity_date"><%= activity.created_at.strftime('%b %d') %></span>
  <span class="activity_gravatar"><%= image_tag gravatar_url(user), class: "img-circle", width: 50, height: 50 %></span>
  <strong class="label label-success">New</strong>&nbsp;<%= user.email.capitalize %> has added <%= activity.trackable.try(:email) %> to Zarlu.
  <hr/>
  </li>
<% end %>
