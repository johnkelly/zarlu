<% cache activity do %>
  <% user = activity.user %>
  <% new_user = activity.trackable.try(:display_name).presence || "Deleted Account" %>
  <li>
  <span class="activity_date"><%= activity.created_at.in_time_zone(@subscriber.time_zone).strftime('%b %d') %></span>
  <span class="activity_gravatar"><%= image_tag gravatar_url(user), class: "img-circle", width: 50, height: 50 %></span>
  <strong class="label label-info">Permission Change</strong>&nbsp;<%= user.display_name %> has given <%= new_user %> manger permissions.
  <hr/>
  </li>
<% end %>
