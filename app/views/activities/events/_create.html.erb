<% cache activity do %>
  <% user = activity.user %>
  <li>
  <span class="activity_date"><%= activity.created_at.in_time_zone('Pacific Time (US & Canada)').strftime('%b %d') %></span>
  <span class="activity_gravatar"><%= image_tag gravatar_url(user), class: "img-circle", width: 50, height: 50 %></span>
  <strong class="label label-info">New</strong>&nbsp;<%= activity.user.display_name %> created a time-off request
  <% if user.has_manager? %>
    for <%= @managers.detect{|m| m.id == user.manager_id}.display_name %> to approve.
  <% end %>
  <hr/>
  </li>
<% end %>
