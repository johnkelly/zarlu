<% cache activity do %>
  <% user = activity.trackable.user %>
  <% manager = @managers.detect{|m| m.id == user.manager_id} %>
  <li>
  <span class="activity_date"><%= activity.created_at.in_time_zone('Pacific Time (US & Canada)').strftime('%b %d') %></span>
  <span class="activity_gravatar"><%= image_tag gravatar_url(manager), class: "img-circle", width: 50, height: 50 %></span>
  <strong class="label label-important">Rejected</strong>&nbsp;<%= manager.display_name %> has rejected <%= user.display_name %>'s time off request.
  <hr/>
  </li>
<% end %>
