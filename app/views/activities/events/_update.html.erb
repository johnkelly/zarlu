<% cache activity do %>
  <li>
  <span class="activity_date"><%= activity.created_at.in_time_zone('Pacific Time (US & Canada)').strftime('%b %d') %></span>
  <span class="activity_gravatar"><%= image_tag gravatar_url(activity.user), class: "img-circle", width: 50, height: 50 %></span>
  <strong class="label label-info">Update</strong>&nbsp;<%= activity.user.display_name %> modified a time off request
  <hr/>
  </li>
<% end %>



