<div class="container paper">
  <h4>Add New Employee or Manager</h4>
  <%= form_for @user, url: add_user_subscribers_url, html: { class: "mt25 form-inline" }, method: :post do |form| %>
    <%= form.email_field :email, class: "input-medium", placeholder: "Email" %>
    <%= form.password_field :password, class: "input-medium", placeholder: "Password" %>
    <%= form.submit "Add", class: "btn btn-primary" %>
  <% end %>
  <h4>Employees & Managers</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Employee Name</th>
        <th>Schedule Manager</th>
        <th>Vacation</th>
        <th>Sick</th>
        <th>Holiday</th>
        <th>Personal</th>
        <th>Unpaid</th>
        <th>Other</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "employee", collection: @employees %>
    </tbody>
  </table>
</div>
